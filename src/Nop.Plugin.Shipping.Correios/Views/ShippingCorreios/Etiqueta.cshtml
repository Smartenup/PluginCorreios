@{
    Layout = "";
}

@model Nop.Plugin.Shipping.Correios.Models.EtiquetaModel

<table style="width:350px;font: 8pt arial;line-height:13px;margin-right:15px;margin-bottom:15px;">
    <tr>
        <td width="117px" style="background: url('/Plugins/Shipping.Correios/Content/Images/@Model.ImageTipo') no-repeat 4px 8px;font-size:6px;" align="center"> <br />@Html.Raw(Model.TextoTipo)<br /> @Html.Raw(Model.NomeEmpresaChancela) </td>
        <td width="117px"><img src="/admin/Plugins/Shipping/ShippingCorreios/GetBarCode?code=@Model.DataMatrix&type=1" alt="" width="94" /></td>
        <td width="117px"><img src="/Plugins/Shipping.Correios/Content/Images/Logo.jpg" width="94" /></td>
    </tr>
    <tr>
        <td>NF: <b>@Model.NFe</b></td>
        <td>Pedido: <b>@Model.OrderId</b></td>
        <td>Peso (g): <b>@Model.OrderWeigth</b></td>
    </tr>
    <tr>
        <td colspan="3" align="center"><b>@Model.TrackingNumber</b></td>
    </tr>
    <tr>
        <td colspan="3"><img src="/admin/Plugins/Shipping/ShippingCorreios/GetBarCode?code=@Model.BarcodeTN&type=2" alt="" width="310" style="padding:0 10px;"/></td>
    </tr>
    <tr>
        <td colspan="3">Nome Legível: ______________________________________</td>
    </tr>
    <tr>
        <td colspan="3">Documento:</td>
    </tr>
    <tr>
        <td width="310px" height="160" style="border:1px solid #000;padding:2px;" colspan="3" valign="top">
            <b style="margin-top:-4px;">Destinatário:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Volume: <b>1/1</b><br /><br />
            @Model.ToName<br />
            @Model.ToAddress @Model.ToNumero<br />
            @Model.ToComp @Model.ToBairro<br />
            <br />
            <b>@Model.ToZIP</b> @Model.ToCity-@Model.ToUF<br />
            &nbsp;&nbsp;&nbsp;<img src="/admin/Plugins/Shipping/ShippingCorreios/GetBarCode?code=@Model.BarcodeZIP&type=2" width="130" height="46" style="padding-top:6px;" alt="" /><br />
            <br />
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <b>Remetente:</b><br />
            @Model.Remetente<br />
            @Model.EnderecoCompleto<br />
            @Model.Bairro<br />
            @Model.CEP @Model.Cidade-@Model.UF
        </td>
    </tr>
</table>


